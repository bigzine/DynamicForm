<UserControl x:Class="Dyform.View.BooleanViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid DataContext="{Binding Source={StaticResource Locator}}">
        <CheckBox Content="oui" HorizontalAlignment="Left" Margin="110,33,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="non" HorizontalAlignment="Left" Margin="206,33,0,0" VerticalAlignment="Top"/>
        <Label   HorizontalAlignment="Left" Margin="20,27,0,0" VerticalAlignment="Top" Content="{Binding BooleView.Label, Mode=OneWay}"/>
    </Grid>
</UserControl>
